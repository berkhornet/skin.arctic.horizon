    <include name="View_56_Banners_WallItem_Layout">
        <include>Object_PosterBack</include>
        <control type="group">
            <include>Defs_Pad</include>

            <include condition="$PARAM[selectbox]" content="View_Selectbox">
                <param name="focusbounce" value="true" />
